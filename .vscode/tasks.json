{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build using MSVC",
      "command": "${workspaceFolder}${/}build.bat",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    {
      "label": "Cleanup",
      "command": "${workspaceFolder}${/}cleanup.bat",
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
